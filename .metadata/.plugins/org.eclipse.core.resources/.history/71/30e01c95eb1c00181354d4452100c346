#include <iostream>
#include "Client.h"
#include "Date.h"
#include "validationFormat.cpp"
using namespace std;
using namespace util;

int main() {

	cout << "Bienvenue a l'outil client" << endl;
	cout << "------------------------------------" << endl;

	bool validation = false;
	int noFolio;
	string nom;
	string prenom;
	string telephone;


	while(!validation){
		cout << "Entrez le numero de folio du client [1000, 10000[" << endl;
		cin >> noFolio;
		if(noFolio <= 1000 or noFolio > 10000){
			cout << "Le numéro de folio n'est pas entre 1000 et 10000 exclusivement" << endl;
		}
		else{
			validation = true;
		}
	}

	validation = false;

	getline(cin, prenom);
	while(!validation){
		cout << "Entrez le prénom: " << endl;
		getline(cin, prenom);
		if(validerFormatNom(prenom)){
			validation = true;
		}
		else{
			cout << "Le prénom n'est pas valide";
		}
	}

	Client nicola(noFolio, "Joe", "Blo", "418 656-2131");
	cout << nicola.reqClientFormate() << endl;

	return 0;
}
